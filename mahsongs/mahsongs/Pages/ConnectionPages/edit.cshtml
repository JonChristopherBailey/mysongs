@page
@model editModel
@{
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <div>
        <h2>edit the song</h2>
    </div>
    <div>
        <form method="post">
            <input asp-for="Connection.ID" type="hidden" />
            <input asp-for=" Connection.SongName" type="text" placeholder="song Name" />
            <span asp-validation-for="Connection.SongName"></span>
            <input asp-for=" Connection.Artist" type="text" placeholder="artist" />
            <span asp-validation-for="Connection.Artist"></span>
            <input asp-for=" Connection.Rating" type="text" placeholder="Rating" />
            <span asp-validation-for="Connection.Rating"></span>
            <input class="w3-button w3-white w3-border w3-border-blue w3-round-large" type="submit" value="Edit songs" />
            <a asp-page="Index">Back to song List</a>

        </form>
    </div>
}
